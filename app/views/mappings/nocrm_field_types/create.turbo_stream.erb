<%= turbo_stream.replace "live_salesforce_objects" do %>
  <%= render partial: "live_salesforce_objects", locals: { new_mapped_field: @new_mapped_field } %>
<% end %>

<% if Mapping.count == 1 %>
  <%= turbo_stream.replace "mapped_fields_and_attributes" do %>
    <%= render partial: "field_list", locals: { mapping: @mapping } %>
  <% end %>
<% else %>
  <%= turbo_stream.append "mapped_fields_and_attributes" do %>
    <%= render partial: "field", locals: { mapping: @mapping} %>
  <% end %>
<% end %>

<%= turbo_stream.replace "remote_modal" do %>
  <%= turbo_frame_tag "remote_modal" %>
<% end %>
