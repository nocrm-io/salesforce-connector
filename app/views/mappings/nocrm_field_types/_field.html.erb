<div class="py-2" id="<%= dom_id(mapping) %>">
  <div class="d-flex align-items-center card-component clickable px-4 py-2">
    <%= link_to edit_nocrm_field_type_path(mapping), data: { controller: "turbo" }, class: "text-decoration-none text-gray-600 d-flex align-items-center flex-grow-1" do %>
      <div class="form-group w-100">
        <%= "#{mapping.nocrm_object.parent_type}." if mapping.nocrm_object.respond_to?(:parent_type) %><%= mapping.nocrm_object.name %>
      </div>
      <i class="fas fa-arrow-right fa-2x text-gray-200 px-4"></i>
      <div class="form-group w-100">
        <%= mapping.salesforce_object.object_type %>.<%= mapping.salesforce_object.name %>
      </div>
    <% end %>

    <%= button_to nocrm_field_type_path(mapping), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "ps-4 bg-white border-2 border-light border-top-0 border-bottom-0 border-end-0 border-start" do %>
      <i class="fas fa-trash text-red-500"></i>
    <% end %>
  </div>
</div>
